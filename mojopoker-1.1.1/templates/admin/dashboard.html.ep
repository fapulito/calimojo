<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard - MojoPoker</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/favicon.png" rel="icon" type="image/x-png">
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #1a1a2e;
            color: #eee;
            min-height: 100vh;
        }
        .header {
            background: #16213e;
            padding: 1rem 2rem;
            border-bottom: 1px solid #0f3460;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { font-size: 1.5rem; color: #e94560; }
        .header nav a {
            color: #94a3b8;
            text-decoration: none;
            margin-left: 1.5rem;
            transition: color 0.2s;
        }
        .header nav a:hover { color: #e94560; }
        .container { max-width: 1400px; margin: 0 auto; padding: 2rem; }
        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }
        .metric-card {
            background: #16213e;
            border-radius: 8px;
            padding: 1.5rem;
            border: 1px solid #0f3460;
        }
        .metric-card h3 {
            font-size: 0.875rem;
            color: #94a3b8;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }
        .metric-card .value {
            font-size: 2rem;
            font-weight: bold;
            color: #e94560;
        }

        .metric-card .value.small { font-size: 1.25rem; }
        .section { margin-bottom: 2rem; }
        .section h2 {
            font-size: 1.25rem;
            margin-bottom: 1rem;
            color: #e94560;
            border-bottom: 1px solid #0f3460;
            padding-bottom: 0.5rem;
        }
        .table-container { overflow-x: auto; }
        table {
            width: 100%;
            border-collapse: collapse;
            background: #16213e;
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 0.75rem 1rem;
            text-align: left;
            border-bottom: 1px solid #0f3460;
        }
        th {
            background: #0f3460;
            font-weight: 600;
            color: #94a3b8;
            text-transform: uppercase;
            font-size: 0.75rem;
        }
        tr:hover { background: #1a1a3e; }
        .status-active { color: #22c55e; }
        .status-waiting { color: #f59e0b; }
        .refresh-btn {
            background: #e94560;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.875rem;
        }
        .refresh-btn:hover { background: #d63850; }
        .last-updated {
            color: #64748b;
            font-size: 0.875rem;
            margin-left: 1rem;
        }
        .loading { opacity: 0.5; }
    </style>
</head>
<body>
    <div class="header">
        <h1>MojoPoker Admin Dashboard</h1>
        <nav>
            <a href="/admin/dashboard">Dashboard</a>
            <a href="/admin/logs">Logs</a>
            <a href="/health">Health</a>
            <a href="/">Back to Game</a>
        </nav>
    </div>
    
    <div class="container">
        <!-- Requirements: 4.3 - System Metrics -->
        <div class="section">
            <h2>System Metrics</h2>
            <div class="metrics-grid">
                <div class="metric-card">
                    <h3>Uptime</h3>
                    <div class="value small" id="uptime">Loading...</div>
                </div>
                <div class="metric-card">
                    <h3>Memory Usage</h3>
                    <div class="value small" id="memory">Loading...</div>
                </div>
                <div class="metric-card">
                    <h3>WebSocket Connections</h3>
                    <div class="value" id="websocket-connections">-</div>
                </div>
                <div class="metric-card">
                    <h3>Perl Version</h3>
                    <div class="value small" id="perl-version">-</div>
                </div>
            </div>
        </div>

        <!-- Requirements: 4.1 - Gaming Metrics -->
        <div class="section">
            <h2>Gaming Metrics</h2>
            <div class="metrics-grid">
                <div class="metric-card">
                    <h3>Active Users</h3>
                    <div class="value" id="active-users">-</div>
                </div>
                <div class="metric-card">
                    <h3>Active Tables</h3>
                    <div class="value" id="active-tables">-</div>
                </div>
                <div class="metric-card">
                    <h3>Total Chips in Play</h3>
                    <div class="value" id="chips-in-play">-</div>
                </div>
                <div class="metric-card">
                    <h3>Games in Progress</h3>
                    <div class="value" id="games-in-progress">-</div>
                </div>
            </div>
        </div>
        
        <!-- Requirements: 4.6 - Table Information -->
        <div class="section">
            <h2>
                Active Tables
                <button class="refresh-btn" onclick="refreshMetrics()">Refresh</button>
                <span class="last-updated" id="last-updated"></span>
            </h2>
            <div class="table-container">
                <table id="tables-list">
                    <thead>
                        <tr>
                            <th>Table ID</th>
                            <th>Game Type</th>
                            <th>Players</th>
                            <th>Pot Size</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tables-body">
                        <tr><td colspan="5">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <script>
        function formatNumber(num) {
            return new Intl.NumberFormat().format(num);
        }
        
        function formatUptime(seconds) {
            const days = Math.floor(seconds / 86400);
            const hours = Math.floor((seconds % 86400) / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            return days + 'd ' + hours + 'h ' + minutes + 'm';
        }
        
        function updateMetrics(data) {
            // System metrics
            if (data.system) {
                document.getElementById('uptime').textContent = data.system.uptime_formatted || formatUptime(data.system.uptime || 0);
                document.getElementById('memory').textContent = (data.system.memory_usage_mb || 0) + ' MB (' + (data.system.memory_percent || 0) + '%)';
                document.getElementById('websocket-connections').textContent = formatNumber(data.gaming?.websocket_connections || 0);
                document.getElementById('perl-version').textContent = data.system.perl_version || '-';
            }
            
            // Gaming metrics
            if (data.gaming) {
                document.getElementById('active-users').textContent = formatNumber(data.gaming.active_users || 0);
                document.getElementById('active-tables').textContent = formatNumber(data.gaming.active_tables || 0);
                document.getElementById('chips-in-play').textContent = formatNumber(data.gaming.total_chips_in_play || 0);
                document.getElementById('games-in-progress').textContent = formatNumber(data.gaming.games_in_progress || 0);
            }

            // Tables list
            var tbody = document.getElementById('tables-body');
            if (data.tables && data.tables.length > 0) {
                tbody.innerHTML = data.tables.map(function(table) {
                    var statusClass = table.status === 'active' ? 'status-active' : 'status-waiting';
                    return '<tr>' +
                        '<td>' + table.table_id + '</td>' +
                        '<td>' + table.game_type + '</td>' +
                        '<td>' + table.player_count + '</td>' +
                        '<td>' + formatNumber(table.pot_size) + '</td>' +
                        '<td class="' + statusClass + '">' + table.status + '</td>' +
                    '</tr>';
                }).join('');
            } else {
                tbody.innerHTML = '<tr><td colspan="5">No active tables</td></tr>';
            }
            
            // Update timestamp
            var now = new Date();
            document.getElementById('last-updated').textContent = 'Last updated: ' + now.toLocaleTimeString();
        }
        
        function refreshMetrics() {
            var container = document.querySelector('.container');
            container.classList.add('loading');
            
            fetch('/admin/metrics')
                .then(function(response) {
                    if (!response.ok) {
                        throw new Error('HTTP ' + response.status);
                    }
                    return response.json();
                })
                .then(function(data) {
                    updateMetrics(data);
                    container.classList.remove('loading');
                })
                .catch(function(error) {
                    console.error('Failed to fetch metrics:', error);
                    container.classList.remove('loading');
                    alert('Failed to load metrics: ' + error.message);
                });
        }
        
        // Initial load
        refreshMetrics();
        
        // Auto-refresh every 30 seconds
        setInterval(refreshMetrics, 30000);
    </script>
</body>
</html>
