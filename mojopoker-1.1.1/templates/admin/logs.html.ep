<!DOCTYPE html>
<html>
<head>
    <title>Error Logs - MojoPoker Admin</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/favicon.png" rel="icon" type="image/x-png">
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #1a1a2e;
            color: #eee;
            min-height: 100vh;
        }
        .header {
            background: #16213e;
            padding: 1rem 2rem;
            border-bottom: 1px solid #0f3460;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { font-size: 1.5rem; color: #e94560; }
        .header nav a {
            color: #94a3b8;
            text-decoration: none;
            margin-left: 1.5rem;
            transition: color 0.2s;
        }
        .header nav a:hover { color: #e94560; }
        .container { max-width: 1400px; margin: 0 auto; padding: 2rem; }
        .controls {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter-group { display: flex; align-items: center; gap: 0.5rem; }
        .filter-group label { color: #94a3b8; font-size: 0.875rem; }
        select, button {
            background: #16213e;
            border: 1px solid #0f3460;
            color: #eee;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-size: 0.875rem;
        }
        select:focus { outline: none; border-color: #e94560; }
        .refresh-btn {
            background: #e94560;
            border: none;
            cursor: pointer;
        }
        .refresh-btn:hover { background: #d63850; }

        .log-count {
            color: #64748b;
            font-size: 0.875rem;
            margin-left: auto;
        }
        .logs-container { overflow-x: auto; }
        table {
            width: 100%;
            border-collapse: collapse;
            background: #16213e;
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 0.75rem 1rem;
            text-align: left;
            border-bottom: 1px solid #0f3460;
        }
        th {
            background: #0f3460;
            font-weight: 600;
            color: #94a3b8;
            text-transform: uppercase;
            font-size: 0.75rem;
            position: sticky;
            top: 0;
        }
        tr:hover { background: #1a1a3e; }
        .severity-debug { color: #64748b; }
        .severity-info { color: #3b82f6; }
        .severity-warn { color: #f59e0b; }
        .severity-error { color: #ef4444; }
        .severity-fatal { color: #dc2626; font-weight: bold; }
        .message-cell {
            max-width: 400px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .message-cell:hover {
            white-space: normal;
            word-break: break-word;
        }
        .source-cell {
            font-family: 'Monaco', 'Menlo', monospace;
            font-size: 0.75rem;
            color: #94a3b8;
        }
        .timestamp-cell {
            font-family: 'Monaco', 'Menlo', monospace;
            font-size: 0.75rem;
            white-space: nowrap;
        }
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #64748b;
        }
        .loading { opacity: 0.5; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Error Logs</h1>
        <nav>
            <a href="/admin/dashboard">Dashboard</a>
            <a href="/admin/logs">Logs</a>
            <a href="/health">Health</a>
            <a href="/">Back to Game</a>
        </nav>
    </div>

    <div class="container">
        <!-- Requirements: 8.3 - Severity filtering -->
        <div class="controls">
            <div class="filter-group">
                <label for="severity-filter">Severity:</label>
                <select id="severity-filter" onchange="filterLogs()">
                    <option value="">All</option>
                    <option value="debug">Debug</option>
                    <option value="info">Info</option>
                    <option value="warn">Warning</option>
                    <option value="error">Error</option>
                    <option value="fatal">Fatal</option>
                </select>
            </div>
            <button class="refresh-btn" onclick="refreshLogs()">Refresh</button>
            <span class="log-count" id="log-count">Loading...</span>
        </div>
        
        <!-- Requirements: 8.1, 8.2 - Display log entries with timestamp, severity, message, source -->
        <div class="logs-container">
            <table id="logs-table">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>Severity</th>
                        <th>Message</th>
                        <th>Source</th>
                    </tr>
                </thead>
                <tbody id="logs-body">
                    <tr><td colspan="4" class="empty-state">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <script>
        var currentSeverity = '<%= $severity_filter || "" %>';
        
        function updateLogsTable(data) {
            var tbody = document.getElementById('logs-body');
            var countEl = document.getElementById('log-count');
            
            if (data.entries && data.entries.length > 0) {
                tbody.innerHTML = data.entries.map(function(entry) {
                    var severityClass = 'severity-' + (entry.severity || 'info');
                    return '<tr>' +
                        '<td class="timestamp-cell">' + escapeHtml(entry.timestamp || '-') + '</td>' +
                        '<td class="' + severityClass + '">' + escapeHtml(entry.severity || '-').toUpperCase() + '</td>' +
                        '<td class="message-cell" title="' + escapeHtml(entry.message || '') + '">' + escapeHtml(entry.message || '-') + '</td>' +
                        '<td class="source-cell">' + escapeHtml(entry.source || '-') + '</td>' +
                    '</tr>';
                }).join('');
                countEl.textContent = 'Showing ' + data.entries.length + ' of ' + (data.total || data.entries.length) + ' entries';
            } else {
                tbody.innerHTML = '<tr><td colspan="4" class="empty-state">No log entries found</td></tr>';
                countEl.textContent = '0 entries';
            }
        }

        function escapeHtml(text) {
            if (!text) return '';
            var div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        function filterLogs() {
            var severity = document.getElementById('severity-filter').value;
            currentSeverity = severity;
            refreshLogs();
        }
        
        function refreshLogs() {
            var container = document.querySelector('.container');
            container.classList.add('loading');
            
            var url = '/admin/logs.json';
            if (currentSeverity) {
                url += '?severity=' + encodeURIComponent(currentSeverity);
            }
            
            fetch(url)
                .then(function(response) {
                    if (!response.ok) {
                        throw new Error('HTTP ' + response.status);
                    }
                    return response.json();
                })
                .then(function(data) {
                    updateLogsTable(data);
                    container.classList.remove('loading');
                })
                .catch(function(error) {
                    console.error('Failed to fetch logs:', error);
                    container.classList.remove('loading');
                    document.getElementById('logs-body').innerHTML = 
                        '<tr><td colspan="4" class="empty-state">Failed to load logs: ' + escapeHtml(error.message) + '</td></tr>';
                });
        }
        
        // Set initial filter value from server
        document.getElementById('severity-filter').value = currentSeverity;
        
        // Initial load
        refreshLogs();
        
        // Auto-refresh every 60 seconds
        setInterval(refreshLogs, 60000);
    </script>
</body>
</html>
